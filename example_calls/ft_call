cd examples

            export KMER=6
            export MODEL_PATH=../Test_runs/pt_1_percent
            export DATA_PATH=../created_data/ft_1_percent
            export OUTPUT_PATH=../Test_runs/ft_crashing_and_restarting

            python run_finetune.py \
                --model_type dna \
                --tokenizer_name=dna$KMER \
                --model_name_or_path $MODEL_PATH \
                --task_name dnaprom \
                --do_train \
                --do_eval \
                --data_dir $DATA_PATH \
                --max_seq_length 150 \
                --per_gpu_eval_batch_size=800   \
                --per_gpu_train_batch_size=800   \
                --learning_rate 4e-4 \
                --num_train_epochs 5.0 \
                --output_dir $OUTPUT_PATH \
                --evaluate_during_training \
                --logging_steps 300 \
                --save_steps 200 \
                --warmup_percent 0.1 \
                --hidden_dropout_prob 0.1 \
                --overwrite_output \
                --weight_decay 0.01 \
                --n_process 8 \
                --add_run_info 'finetuning the 1percent pt model with the same 1 percent data for finetuning.
                like 8x amount of samples.
                lower learning rate of 4e-4 and downsampled evaluate dataset. Crashing and restarting trial'